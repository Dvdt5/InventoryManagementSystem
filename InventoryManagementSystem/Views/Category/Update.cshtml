
@{
    ViewData["Title"] = "Update Category";
}


@model CategoryModel

<div class="container mt-5">
    <h2>Update Category</h2>
    <form asp-controller="Category" asp-action="Update" method="post">
        <!-- Name -->
        <div class="mb-3">
            <label asp-for="Name" class="form-label">Name</label>
            <input type="text" id="categoryName" class="form-control" asp-for="Name" required>
        </div>

        <!-- Submit Button -->
        <button type="submit" class="btn btn-primary">Submit</button>
        <a class="btn btn-danger" asp-action="Index">Cancel</a>
    </form>
</div>



