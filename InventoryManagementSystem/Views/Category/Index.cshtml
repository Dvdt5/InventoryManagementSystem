
@{
    ViewData["Title"] = "Categories";
}

<h1>Categories</h1>


<div class="table-responsive px-3">
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Category ID</th>
                <th>Name</th>
                <th>Created</th>
                <th>Updated</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Created</td>
                    <td>@item.Updated</td>
                </tr>
            }
        </tbody>
    </table>
</div>